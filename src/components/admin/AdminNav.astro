---
import { getDb, contacts } from '../../lib/db';

const user = Astro.locals.user!;
const path = Astro.url.pathname;

let unreadContacts = 0;
try {
  const db = getDb(Astro.locals.runtime.env.DB);
  const all = await db.select({ read: contacts.read }).from(contacts).all();
  unreadContacts = all.filter((c) => !c.read).length;
} catch {}

const links = [
  { href: '/admin', label: 'Dashboard', exact: true },
  { href: '/admin/posts', label: 'Posts' },
  { href: '/admin/pages', label: 'Páginas' },
  { href: '/admin/media', label: 'Mídia' },
  { href: '/admin/contacts', label: 'Contatos', badge: unreadContacts },
  { href: '/admin/subscribers', label: 'Newsletter' },
  { href: '/admin/settings', label: 'Configurações' },
];
---

<aside class="w-56 shrink-0">
  <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-4 sticky top-20">
    <div class="flex items-center gap-3 mb-6 pb-4 border-b border-zinc-800">
      <img
        src={user.avatarUrl ?? `https://github.com/${user.username}.png`}
        alt={user.username}
        class="w-8 h-8 rounded-full"
      />
      <div>
        <p class="text-sm font-medium text-zinc-100">{user.username}</p>
        <p class="text-xs text-zinc-500">Admin</p>
      </div>
    </div>

    <nav class="space-y-1">
      {links.map(({ href, label, exact, badge }) => {
        const active = exact ? path === href : path.startsWith(href);
        return (
          <a
            href={href}
            class={`flex items-center justify-between px-3 py-2 rounded-lg text-sm transition-colors ${
              active
                ? 'bg-indigo-500/10 text-indigo-400 font-medium'
                : 'text-zinc-400 hover:text-zinc-100 hover:bg-zinc-800'
            }`}
          >
            <span>{label}</span>
            {badge ? <span class="text-xs bg-indigo-600 text-white px-1.5 py-0.5 rounded-full leading-none">{badge}</span> : null}
          </a>
        );
      })}
    </nav>

    <div class="mt-6 pt-4 border-t border-zinc-800">
      <a href="/" class="flex items-center gap-2 text-xs text-zinc-600 hover:text-zinc-400 transition-colors">
        ← Ver blog
      </a>
    </div>
  </div>
</aside>
