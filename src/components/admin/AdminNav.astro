---
const user = Astro.locals.user!;
const path = Astro.url.pathname;

const links = [
  { href: '/admin', label: 'Dashboard', exact: true },
  { href: '/admin/posts', label: 'Posts' },
];
---

<aside class="w-56 shrink-0">
  <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-4 sticky top-20">
    <div class="flex items-center gap-3 mb-6 pb-4 border-b border-zinc-800">
      <img
        src={user.avatarUrl ?? `https://github.com/${user.username}.png`}
        alt={user.username}
        class="w-8 h-8 rounded-full"
      />
      <div>
        <p class="text-sm font-medium text-zinc-100">{user.username}</p>
        <p class="text-xs text-zinc-500">Admin</p>
      </div>
    </div>

    <nav class="space-y-1">
      {links.map(({ href, label, exact }) => {
        const active = exact ? path === href : path.startsWith(href);
        return (
          <a
            href={href}
            class={`flex items-center gap-2.5 px-3 py-2 rounded-lg text-sm transition-colors ${
              active
                ? 'bg-indigo-500/10 text-indigo-400 font-medium'
                : 'text-zinc-400 hover:text-zinc-100 hover:bg-zinc-800'
            }`}
          >
            {label}
          </a>
        );
      })}
    </nav>

    <div class="mt-6 pt-4 border-t border-zinc-800">
      <a href="/" class="flex items-center gap-2 text-xs text-zinc-600 hover:text-zinc-400 transition-colors">
        â† Ver blog
      </a>
    </div>
  </div>
</aside>
