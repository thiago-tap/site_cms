---
interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedAt?: number | null;
  updatedAt?: number | null;
  tags?: string[];
  siteName?: string;
  siteUrl?: string;
  authorName?: string;
  wordCount?: number;
}

const {
  title,
  description = '',
  image,
  type = 'website',
  publishedAt,
  updatedAt,
  tags = [],
  siteName = 'Blog do Thiago',
  siteUrl = 'https://thiago.catiteo.com',
  authorName = '',
  wordCount,
} = Astro.props;

const pageUrl = new URL(Astro.url.pathname, siteUrl).toString();
const ogImage = image?.startsWith('http') ? image : image ? new URL(image, siteUrl).toString() : null;

const articleJsonLd = type === 'article' ? {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: title,
  description: description || title,
  image: ogImage ?? undefined,
  url: pageUrl,
  datePublished: publishedAt ? new Date(publishedAt * 1000).toISOString() : undefined,
  dateModified: updatedAt ? new Date(updatedAt * 1000).toISOString() : (publishedAt ? new Date(publishedAt * 1000).toISOString() : undefined),
  keywords: tags.join(', ') || undefined,
  wordCount: wordCount ?? undefined,
  inLanguage: 'pt-BR',
  author: authorName ? {
    '@type': 'Person',
    name: authorName,
    url: siteUrl,
  } : undefined,
  publisher: {
    '@type': 'Organization',
    name: siteName,
    logo: {
      '@type': 'ImageObject',
      url: new URL('/favicon.svg', siteUrl).toString(),
    },
  },
  mainEntityOfPage: {
    '@type': 'WebPage',
    '@id': pageUrl,
  },
} : null;

const websiteJsonLd = type !== 'article' ? {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: siteName,
  url: siteUrl,
  potentialAction: {
    '@type': 'SearchAction',
    target: `${siteUrl}/busca?q={search_term_string}`,
    'query-input': 'required name=search_term_string',
  },
} : null;
---

<title>{title} — {siteName}</title>
<meta name="description" content={description || title} />
<link rel="canonical" href={pageUrl} />

<!-- Open Graph -->
<meta property="og:type" content={type} />
<meta property="og:url" content={pageUrl} />
<meta property="og:title" content={`${title} — ${siteName}`} />
<meta property="og:description" content={description || title} />
<meta property="og:site_name" content={siteName} />
{ogImage && <meta property="og:image" content={ogImage} />}
{type === 'article' && publishedAt && (
  <meta property="article:published_time" content={new Date(publishedAt * 1000).toISOString()} />
)}
{tags.map((tag) => <meta property="article:tag" content={tag} />)}

<!-- Twitter Card -->
<meta name="twitter:card" content={ogImage ? 'summary_large_image' : 'summary'} />
<meta name="twitter:title" content={`${title} — ${siteName}`} />
<meta name="twitter:description" content={description || title} />
{ogImage && <meta name="twitter:image" content={ogImage} />}

<!-- JSON-LD -->
{articleJsonLd && (
  <script type="application/ld+json" set:html={JSON.stringify(articleJsonLd)} />
)}
{websiteJsonLd && (
  <script type="application/ld+json" set:html={JSON.stringify(websiteJsonLd)} />
)}
