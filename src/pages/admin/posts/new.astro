---
import Header from '../../../components/Header.astro';
import AdminNav from '../../../components/admin/AdminNav.astro';
import MarkdownToolbar from '../../../components/MarkdownToolbar.astro';
import { getDb, posts } from '../../../lib/db';
import { eq } from 'drizzle-orm';
import { generateId, slugify, calcReadingTime } from '../../../lib/utils';
import '../../../styles/global.css';

let error = '';

if (Astro.request.method === 'POST') {
  const form = await Astro.request.formData();
  const title = (form.get('title') as string)?.trim();
  const content = (form.get('content') as string)?.trim();
  const excerpt = (form.get('excerpt') as string)?.trim() || null;
  const metaDescription = (form.get('meta_description') as string)?.trim() || null;
  const coverImage = (form.get('cover_image') as string)?.trim() || null;
  const tagsRaw = (form.get('tags') as string)?.trim();
  const status = form.get('status') as string;
  const featured = form.get('featured') === 'on' ? 1 : 0;
  const scheduledAtRaw = (form.get('scheduled_at') as string)?.trim();
  const scheduledAt = scheduledAtRaw ? Math.floor(new Date(scheduledAtRaw).getTime() / 1000) : null;
  const slugRaw = (form.get('slug') as string)?.trim();
  const series = (form.get('series') as string)?.trim() || null;
  const seriesOrderRaw = (form.get('series_order') as string)?.trim();
  const seriesOrder = seriesOrderRaw ? parseInt(seriesOrderRaw, 10) : null;

  if (!title || !content) {
    error = 'T√≠tulo e conte√∫do s√£o obrigat√≥rios.';
  } else {
    const db = getDb(Astro.locals.runtime.env.DB);
    const baseSlug = slugRaw ? slugify(slugRaw) : slugify(title);
    let slug = baseSlug;
    const existing = await db.select().from(posts).where(eq(posts.slug, slug)).get();
    if (existing) slug = `${baseSlug}-${Date.now()}`;

    const tags = tagsRaw
      ? JSON.stringify(tagsRaw.split(',').map((t) => t.trim()).filter(Boolean).slice(0, 8))
      : '[]';

    const now = Math.floor(Date.now() / 1000);
    await db.insert(posts).values({
      id: generateId(),
      title,
      slug,
      content,
      excerpt,
      metaDescription,
      coverImage,
      tags,
      status: status === 'published' ? 'published' : 'draft',
      readingTime: calcReadingTime(content),
      publishedAt: status === 'published' ? now : null,
      createdAt: now,
      updatedAt: now,
      featured,
      scheduledAt,
      series,
      seriesOrder,
    });

    return Astro.redirect('/admin/posts');
  }
}
---

<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Novo Post ‚Äî Admin</title>
  <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
</head>
<body class="bg-zinc-950 text-zinc-100 min-h-screen">
  <Header />

  <div class="max-w-5xl mx-auto px-4 py-8 flex gap-8">
    <AdminNav />

    <div class="flex-1 min-w-0">
      <div class="flex items-center justify-between mb-8">
        <h1 class="text-2xl font-bold">Novo Post</h1>
        <a href="/admin/posts" class="text-sm text-zinc-500 hover:text-zinc-300 transition-colors">‚Üê Voltar</a>
      </div>

      {error && <div class="mb-6 p-3 bg-red-500/10 border border-red-500/20 rounded-lg text-red-400 text-sm">{error}</div>}

      <form method="POST" class="space-y-5">
        <div>
          <label for="title" class="block text-sm font-medium text-zinc-300 mb-1.5">T√≠tulo <span class="text-red-400">*</span></label>
          <input id="title" name="title" type="text" required placeholder="T√≠tulo do post"
            class="w-full bg-zinc-900 border border-zinc-700 rounded-lg px-3 py-2.5 text-sm text-zinc-100 placeholder-zinc-600 focus:outline-none focus:border-indigo-500 transition-colors" />
        </div>

        <div class="grid sm:grid-cols-2 gap-4">
          <div>
            <label for="excerpt" class="block text-sm font-medium text-zinc-300 mb-1.5">Resumo <span class="text-zinc-600">(cards)</span></label>
            <input id="excerpt" name="excerpt" type="text" placeholder="Breve descri√ß√£o para os cards..."
              class="w-full bg-zinc-900 border border-zinc-700 rounded-lg px-3 py-2.5 text-sm text-zinc-100 placeholder-zinc-600 focus:outline-none focus:border-indigo-500 transition-colors" />
          </div>
          <div>
            <div class="flex items-center justify-between mb-1.5">
              <label for="meta_description" class="block text-sm font-medium text-zinc-300">Meta Description <span class="text-zinc-600">(SEO)</span></label>
              <button type="button" id="btn-meta" class="text-xs px-2 py-0.5 bg-green-500/10 hover:bg-green-500/20 text-green-400 border border-green-500/20 rounded transition-colors">
                ü§ñ IA
              </button>
            </div>
            <input id="meta_description" name="meta_description" type="text" maxlength="160" placeholder="Descri√ß√£o para o Google (at√© 160 caracteres)"
              class="w-full bg-zinc-900 border border-zinc-700 rounded-lg px-3 py-2.5 text-sm text-zinc-100 placeholder-zinc-600 focus:outline-none focus:border-indigo-500 transition-colors" />
          </div>
        </div>

        <div>
          <label for="slug" class="block text-sm font-medium text-zinc-300 mb-1.5">
            Slug <span class="text-zinc-600">(URL do post)</span>
          </label>
          <div class="flex items-center">
            <span class="text-xs text-zinc-600 bg-zinc-800 border border-zinc-700 border-r-0 rounded-l-lg px-3 py-2.5">/blog/</span>
            <input id="slug" name="slug" type="text" placeholder="meu-post-incrivel"
              class="flex-1 bg-zinc-900 border border-zinc-700 rounded-r-lg px-3 py-2.5 text-sm font-mono text-zinc-100 placeholder-zinc-600 focus:outline-none focus:border-indigo-500 transition-colors" />
          </div>
          <p class="text-xs text-zinc-600 mt-1">Auto-gerado a partir do t√≠tulo. Edite se quiser uma URL personalizada.</p>
        </div>

        <div>
          <label for="cover_image" class="block text-sm font-medium text-zinc-300 mb-1.5">Imagem de capa</label>
          <div class="flex gap-2">
            <input id="cover_image" name="cover_image" type="text" placeholder="https://... ou fa√ßa upload ‚Üí"
              class="flex-1 bg-zinc-900 border border-zinc-700 rounded-lg px-3 py-2.5 text-sm text-zinc-100 placeholder-zinc-600 focus:outline-none focus:border-indigo-500 transition-colors" />
            <label class="flex items-center gap-1.5 px-3 py-2.5 bg-zinc-800 hover:bg-zinc-700 border border-zinc-700 rounded-lg text-sm text-zinc-400 cursor-pointer transition-colors">
              üì§ Upload
              <input type="file" accept="image/*" id="cover-upload" class="hidden" />
            </label>
            <button type="button" id="btn-ai-cover" class="flex items-center gap-1.5 px-3 py-2.5 bg-violet-500/10 hover:bg-violet-500/20 border border-violet-500/20 text-violet-400 rounded-lg text-sm transition-colors">
              üé® IA
            </button>
          </div>
          <div id="cover-preview" class="hidden mt-2">
            <img id="cover-img" src="" alt="Preview" class="w-full max-h-48 object-cover rounded-lg" />
          </div>
        </div>

        <div>
          <div class="flex items-center justify-between mb-1.5">
            <label for="content" class="block text-sm font-medium text-zinc-300">Conte√∫do (Markdown) <span class="text-red-400">*</span></label>
            <div class="flex items-center gap-2">
              <button type="button" id="btn-summary" class="text-xs px-2 py-1 bg-indigo-500/10 hover:bg-indigo-500/20 text-indigo-400 border border-indigo-500/20 rounded-md transition-colors">ü§ñ Resumo IA</button>
              <button type="button" id="btn-tags" class="text-xs px-2 py-1 bg-purple-500/10 hover:bg-purple-500/20 text-purple-400 border border-purple-500/20 rounded-md transition-colors">üè∑Ô∏è Tags IA</button>
              <button type="button" id="btn-grammar" class="text-xs px-2 py-1 bg-amber-500/10 hover:bg-amber-500/20 text-amber-400 border border-amber-500/20 rounded-md transition-colors">‚úèÔ∏è Revisar</button>
              <button type="button" id="btn-titles" class="text-xs px-2 py-1 bg-cyan-500/10 hover:bg-cyan-500/20 text-cyan-400 border border-cyan-500/20 rounded-md transition-colors">üí° T√≠tulos</button>
              <button type="button" id="btn-translate" class="text-xs px-2 py-1 bg-orange-500/10 hover:bg-orange-500/20 text-orange-400 border border-orange-500/20 rounded-md transition-colors">üåê Traduzir</button>
            </div>
          </div>
          <MarkdownToolbar targetId="content" />
          <textarea id="content" name="content" required rows={24} spellcheck={false}
            placeholder="# T√≠tulo&#10;&#10;Escreva seu post em Markdown..."
            class="w-full bg-zinc-950 border border-zinc-700 rounded-b-lg rounded-t-none px-4 py-3 text-sm font-mono text-zinc-200 placeholder-zinc-700 focus:outline-none focus:border-indigo-500 transition-colors resize-y leading-relaxed"
          ></textarea>
          <div id="ai-result" class="hidden mt-2 p-3 bg-zinc-900 border border-indigo-500/20 rounded-lg text-sm text-zinc-300"></div>
        </div>

        <div class="grid sm:grid-cols-2 gap-4">
          <div>
            <label for="tags" class="block text-sm font-medium text-zinc-300 mb-1.5">Tags <span class="text-zinc-600">(v√≠rgula)</span></label>
            <input id="tags" name="tags" type="text" placeholder="astro, cloudflare, typescript"
              class="w-full bg-zinc-900 border border-zinc-700 rounded-lg px-3 py-2.5 text-sm text-zinc-100 placeholder-zinc-600 focus:outline-none focus:border-indigo-500 transition-colors" />
          </div>
          <div>
            <label for="status" class="block text-sm font-medium text-zinc-300 mb-1.5">Status</label>
            <select id="status" name="status"
              class="w-full bg-zinc-900 border border-zinc-700 rounded-lg px-3 py-2.5 text-sm text-zinc-100 focus:outline-none focus:border-indigo-500 transition-colors">
              <option value="draft">Rascunho</option>
              <option value="published">Publicar agora</option>
            </select>
          </div>
        </div>

        <div class="grid sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-zinc-300 mb-1.5">Op√ß√µes</label>
            <label class="flex items-center gap-2 cursor-pointer">
              <input type="checkbox" name="featured" class="w-4 h-4 rounded border-zinc-600 bg-zinc-800 text-indigo-600" />
              <span class="text-sm text-zinc-300">Destacar na homepage</span>
            </label>
          </div>
          <div>
            <label for="scheduled_at" class="block text-sm font-medium text-zinc-300 mb-1.5">Agendar publica√ß√£o</label>
            <input id="scheduled_at" name="scheduled_at" type="datetime-local"
              class="w-full bg-zinc-900 border border-zinc-700 rounded-lg px-3 py-2.5 text-sm text-zinc-100 focus:outline-none focus:border-indigo-500 transition-colors" />
          </div>
        </div>

        <div class="grid sm:grid-cols-3 gap-4">
          <div class="sm:col-span-2">
            <label for="series" class="block text-sm font-medium text-zinc-300 mb-1.5">S√©rie <span class="text-zinc-600">(opcional)</span></label>
            <input id="series" name="series" type="text" placeholder="Ex: Astro do zero, DevOps na pr√°tica..."
              class="w-full bg-zinc-900 border border-zinc-700 rounded-lg px-3 py-2.5 text-sm text-zinc-100 placeholder-zinc-600 focus:outline-none focus:border-indigo-500 transition-colors" />
          </div>
          <div>
            <label for="series_order" class="block text-sm font-medium text-zinc-300 mb-1.5">Ordem na s√©rie</label>
            <input id="series_order" name="series_order" type="number" min="1" placeholder="1"
              class="w-full bg-zinc-900 border border-zinc-700 rounded-lg px-3 py-2.5 text-sm text-zinc-100 placeholder-zinc-600 focus:outline-none focus:border-indigo-500 transition-colors" />
          </div>
        </div>

        <div class="flex gap-3 pt-2">
          <button type="submit" class="flex-1 bg-indigo-600 hover:bg-indigo-500 text-white py-2.5 rounded-lg font-medium text-sm transition-colors">
            Salvar post
          </button>
          <a href="/admin/posts" class="px-6 py-2.5 border border-zinc-700 hover:border-zinc-600 text-zinc-300 rounded-lg text-sm font-medium transition-colors">
            Cancelar
          </a>
        </div>
      </form>
    </div>
  </div>

  <script>
    const contentEl = document.getElementById('content') as HTMLTextAreaElement;
    const tagsEl = document.getElementById('tags') as HTMLInputElement;
    const metaEl = document.getElementById('meta_description') as HTMLInputElement;
    const titleEl = document.getElementById('title') as HTMLInputElement;
    const slugEl = document.getElementById('slug') as HTMLInputElement;
    const aiResult = document.getElementById('ai-result')!;
    const coverInput = document.getElementById('cover_image') as HTMLInputElement;
    const coverUpload = document.getElementById('cover-upload') as HTMLInputElement;
    const coverPreview = document.getElementById('cover-preview')!;
    const coverImg = document.getElementById('cover-img') as HTMLImageElement;

    // Auto-fill slug from title (only if slug hasn't been manually edited)
    let slugManuallyEdited = false;
    slugEl?.addEventListener('input', () => { slugManuallyEdited = true; });
    titleEl?.addEventListener('input', () => {
      if (!slugManuallyEdited) {
        slugEl.value = titleEl.value.toLowerCase()
          .normalize('NFD').replace(/[\u0300-\u036f]/g, '')
          .replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
      }
    });

    async function callAI(endpoint: string, body: object) {
      aiResult.textContent = 'Gerando com IA...';
      aiResult.classList.remove('hidden');
      try {
        const res = await fetch(endpoint, { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(body) });
        return await res.json() as { result?: string; error?: string };
      } catch { return { error: 'Erro de conex√£o' }; }
    }

    document.getElementById('btn-summary')?.addEventListener('click', async () => {
      const content = contentEl.value;
      if (!content.trim()) { alert('Escreva o conte√∫do primeiro.'); return; }
      const data = await callAI('/api/ai/summary', { content });
      aiResult.textContent = data.result ?? data.error ?? 'Erro';
    });

    document.getElementById('btn-tags')?.addEventListener('click', async () => {
      const content = contentEl.value;
      if (!content.trim()) { alert('Escreva o conte√∫do primeiro.'); return; }
      const data = await callAI('/api/ai/tags', { content });
      if (data.result) { tagsEl.value = data.result; aiResult.textContent = `‚úì Tags: ${data.result}`; }
      else { aiResult.textContent = data.error ?? 'Erro'; }
    });

    document.getElementById('btn-meta')?.addEventListener('click', async () => {
      const content = contentEl.value;
      if (!content.trim()) { alert('Escreva o conte√∫do primeiro.'); return; }
      const data = await callAI('/api/ai/meta', { content, title: titleEl.value });
      if (data.result) { metaEl.value = data.result; aiResult.textContent = `‚úì Meta description gerada.`; aiResult.classList.remove('hidden'); }
      else { aiResult.textContent = data.error ?? 'Erro'; }
    });

    document.getElementById('btn-grammar')?.addEventListener('click', async () => {
      const content = contentEl.value;
      if (!content.trim()) { alert('Escreva o conte√∫do primeiro.'); return; }
      aiResult.textContent = 'Revisando com IA...';
      aiResult.classList.remove('hidden');
      const data = await callAI('/api/ai/grammar', { content });
      if (data.result) { contentEl.value = data.result; aiResult.textContent = '‚úì Texto revisado e aplicado ao editor.'; }
      else { aiResult.textContent = data.error ?? 'Erro'; }
    });

    document.getElementById('btn-titles')?.addEventListener('click', async () => {
      const content = contentEl.value;
      const title = titleEl.value;
      if (!content.trim() && !title.trim()) { alert('Escreva o conte√∫do ou t√≠tulo primeiro.'); return; }
      aiResult.textContent = 'Gerando sugest√µes de t√≠tulos...';
      aiResult.classList.remove('hidden');
      const data = await callAI('/api/ai/titles', { content, title });
      if (data.result) { aiResult.innerHTML = '<strong class="text-zinc-200 block mb-2">Sugest√µes de t√≠tulos:</strong>' + data.result.split('\n').filter(Boolean).map((t: string) => `<div class="cursor-pointer hover:text-indigo-400 py-0.5" onclick="document.getElementById('title').value=this.textContent?.trim()||''">${t}</div>`).join(''); }
      else { aiResult.textContent = data.error ?? 'Erro'; }
    });

    document.getElementById('btn-translate')?.addEventListener('click', async () => {
      const content = contentEl.value;
      if (!content.trim()) { alert('Escreva o conte√∫do primeiro.'); return; }
      if (!confirm('Traduzir o conte√∫do para ingl√™s? O texto atual ser√° substitu√≠do.')) return;
      aiResult.textContent = 'Traduzindo...';
      aiResult.classList.remove('hidden');
      const data = await callAI('/api/ai/translate', { content, targetLang: 'en' });
      if (data.result) { contentEl.value = data.result; aiResult.textContent = '‚úì Conte√∫do traduzido e aplicado.'; }
      else { aiResult.textContent = data.error ?? 'Erro'; }
    });

    // AI cover image generation
    document.getElementById('btn-ai-cover')?.addEventListener('click', async () => {
      const title = titleEl.value || contentEl.value.slice(0, 100);
      if (!title.trim()) { alert('Escreva o t√≠tulo ou conte√∫do primeiro.'); return; }
      const btn = document.getElementById('btn-ai-cover') as HTMLButtonElement;
      btn.textContent = '‚è≥ Gerando...';
      btn.disabled = true;
      try {
        const res = await fetch('/api/ai/cover', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ prompt: title }),
        });
        const data = await res.json() as { ok?: boolean; url?: string; dataUrl?: string; error?: string };
        if (data.ok) {
          const src = data.url ?? data.dataUrl ?? '';
          coverInput.value = data.url ?? '';
          coverImg.src = src;
          coverPreview.classList.remove('hidden');
        } else { alert(data.error ?? 'Erro ao gerar imagem.'); }
      } catch { alert('Erro ao gerar imagem.'); }
      btn.textContent = 'üé® IA';
      btn.disabled = false;
    });

    // Cover image preview from URL
    coverInput.addEventListener('input', () => {
      const url = coverInput.value.trim();
      if (url) { coverImg.src = url; coverPreview.classList.remove('hidden'); }
      else { coverPreview.classList.add('hidden'); }
    });

    // Cover image upload
    coverUpload?.addEventListener('change', async () => {
      const file = coverUpload.files?.[0];
      if (!file) return;
      const formData = new FormData();
      formData.append('file', file);
      try {
        const res = await fetch('/api/upload', { method: 'POST', body: formData });
        const json = await res.json() as { url?: string; error?: string };
        if (json.url) {
          coverInput.value = json.url;
          coverImg.src = json.url;
          coverPreview.classList.remove('hidden');
        } else { alert(json.error ?? 'Erro no upload.'); }
      } catch { alert('Erro ao enviar imagem.'); }
      coverUpload.value = '';
    });
  </script>
</body>
</html>
