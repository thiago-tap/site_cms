import Header from '../../../components/Header.astro';
import AdminNav from '../../../components/admin/AdminNav.astro';
import MarkdownToolbar from '../../../components/MarkdownToolbar.astro';
import { getDb, posts, postRevisions } from '../../../lib/db';
import { eq, desc } from 'drizzle-orm';
import { calcReadingTime, parseTags, generateId, slugify } from '../../../lib/utils';
import '../../../styles/global.css';

const { id } = Astro.params;
if (!id) return Astro.redirect('/admin/posts');

const db = getDb(Astro.locals.runtime.env.DB);
let post = await db.select().from(posts).where(eq(posts.id, id)).get();
if (!post) return new Response(null, { status: 404 });

let error = '';
let success = '';

if (Astro.request.method === 'POST') {
  const form = await Astro.request.formData();
  const action = form.get('_action') as string;

  if (action === 'delete') {
    await db.delete(posts).where(eq(posts.id, id));
    return Astro.redirect('/admin/posts');
  }

  if (action === 'duplicate') {
    const baseSlug = slugify(post.title + '-copia');
    let newSlug = baseSlug;
    const existing = await db.select().from(posts).where(eq(posts.slug, newSlug)).get();
    if (existing) newSlug = `${baseSlug}-${Date.now()}`;
    const now = Math.floor(Date.now() / 1000);
    const newId = generateId();
    await db.insert(posts).values({
      ...post,
      id: newId,
      slug: newSlug,
      title: post.title + ' (cÃ³pia)',
      status: 'draft',
      publishedAt: null,
      views: 0,
      createdAt: now,
      updatedAt: now,
    });
    return Astro.redirect(`/admin/posts/${newId}`);
  }

  const title = (form.get('title') as string)?.trim();
  const content = (form.get('content') as string)?.trim();
  const excerpt = (form.get('excerpt') as string)?.trim() || null;
  const metaDescription = (form.get('meta_description') as string)?.trim() || null;
  const coverImage = (form.get('cover_image') as string)?.trim() || null;
  const tagsRaw = (form.get('tags') as string)?.trim();
  const status = form.get('status') as string;
  const aiSummary = (form.get('ai_summary') as string)?.trim() || null;
  const featured = form.get('featured') === 'on' ? 1 : 0;
  const scheduledAtRaw = (form.get('scheduled_at') as string)?.trim();
  const scheduledAt = scheduledAtRaw ? Math.floor(new Date(scheduledAtRaw).getTime() / 1000) : null;
  const series = (form.get('series') as string)?.trim() || null;
  const seriesOrderRaw = (form.get('series_order') as string)?.trim();
  const seriesOrder = seriesOrderRaw ? parseInt(seriesOrderRaw, 10) : null;
  const slugRaw = (form.get('slug') as string)?.trim();

  if (!title || !content) {
    error = 'TÃ­tulo e conteÃºdo sÃ£o obrigatÃ³rios.';
  } else {
    const now = Math.floor(Date.now() / 1000);
    const wasPublished = post.status === 'published';
    const willPublish = status === 'published';

    // Resolve slug
    let newSlug = post.slug;
    if (slugRaw && slugify(slugRaw) !== post.slug) {
      const candidate = slugify(slugRaw);
      const conflict = await db.select({ id: posts.id }).from(posts).where(eq(posts.slug, candidate)).get();
      if (!conflict) newSlug = candidate;
      else error = `Slug "${candidate}" jÃ¡ estÃ¡ em uso.`;
    }

    if (!error) {
      // Save revision (keep last 20)
      const lastRevs = await db.select({ version: postRevisions.version })
        .from(postRevisions).where(eq(postRevisions.postId, id))
        .orderBy(desc(postRevisions.savedAt)).all();
      const nextVersion = (lastRevs[0]?.version ?? 0) + 1;
      await db.insert(postRevisions).values({
        id: generateId(),
        postId: id,
        title: post.title,
        content: post.content,
        version: nextVersion,
        savedAt: now,
      });
      // Prune old revisions (keep 20)
      if (lastRevs.length >= 20) {
        const toDelete = lastRevs.slice(19).map((_, i) => lastRevs[19 + i]);
        for (const rev of toDelete) {
          if (rev) await db.delete(postRevisions).where(eq(postRevisions.version, rev.version));
        }
      }

      await db.update(posts).set({
        title,
        slug: newSlug,
        content,
        excerpt,
        metaDescription,
        coverImage,
        tags: tagsRaw
          ? JSON.stringify(tagsRaw.split(',').map((t) => t.trim()).filter(Boolean).slice(0, 8))
          : '[]',
        status: willPublish ? 'published' : 'draft',
        aiSummary,
        readingTime: calcReadingTime(content),
        publishedAt: willPublish && !wasPublished ? now : post.publishedAt,
        updatedAt: now,
        featured,
        scheduledAt,
        series,
        seriesOrder,
      }).where(eq(posts.id, id));

      post = await db.select().from(posts).where(eq(posts.id, id)).get() ?? post;
      success = 'Post atualizado!';
      // Fire-and-forget: regenerate embedding for related posts AI
      const siteUrl = Astro.locals.runtime.env.SITE_URL ?? 'https://thiago.catiteo.com';
      fetch(`${siteUrl}/api/ai/embed`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json', 'Cookie': Astro.request.headers.get('cookie') ?? '' },
        body: JSON.stringify({ postId: id }),
      }).catch(() => {});
    }
  }
}

const restored = Astro.url.searchParams.get('restored') === '1';

const tags = parseTags(post.tags).join(', ');
