        const data = await res.json() as { ok?: boolean; url?: string; dataUrl?: string; error?: string };
        if (data.ok) {
          const src = data.url ?? data.dataUrl ?? '';
          coverInput.value = data.url ?? '';
          coverImg.src = src;
          coverPreview.classList.remove('hidden');
        } else { alert(data.error ?? 'Erro ao gerar imagem.'); }
      } catch { alert('Erro ao gerar imagem.'); }
      btn.textContent = 'ğŸ¨ IA';
      btn.disabled = false;
    });

    // Media picker modal
    const mediaModal = document.getElementById('media-modal')!;
    document.getElementById('btn-media-picker')?.addEventListener('click', () => {
      mediaModal.classList.remove('hidden');
      mediaModal.classList.add('flex');
    });
    document.getElementById('close-media-modal')?.addEventListener('click', () => {
      mediaModal.classList.add('hidden');
      mediaModal.classList.remove('flex');
    });
    mediaModal.addEventListener('click', (e) => {
      if (e.target === mediaModal) { mediaModal.classList.add('hidden'); mediaModal.classList.remove('flex'); }
    });
    window.addEventListener('message', (e) => {
      if (e.data?.type === 'media-select' && e.data.url) {
        coverInput.value = e.data.url;
        coverImg.src = e.data.url;
        coverPreview.classList.remove('hidden');
        mediaModal.classList.add('hidden');
        mediaModal.classList.remove('flex');
      }
    });

    coverInput.addEventListener('input', () => {
      const url = coverInput.value.trim();
      if (url) { coverImg.src = url; coverPreview.classList.remove('hidden'); }
      else { coverPreview.classList.add('hidden'); }
    });

    // Cover image upload (converts to WebP before sending)
    coverUpload?.addEventListener('change', async () => {
      const file = coverUpload.files?.[0];
      if (!file) return;
      const converted = await toWebP(file);
      const formData = new FormData();
      formData.append('file', converted);
      try {
        const res = await fetch('/api/upload', { method: 'POST', body: formData });
        const json = await res.json() as { url?: string; error?: string };
        if (json.url) { coverInput.value = json.url; coverImg.src = json.url; coverPreview.classList.remove('hidden'); }
        else { alert(json.error ?? 'Erro no upload.'); }
      } catch { alert('Erro ao enviar imagem.'); }
      coverUpload.value = '';
    });
  </script>
