---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getDb, subscribers } from '../../lib/db';
import { eq } from 'drizzle-orm';
import { getSettings } from '../../lib/settings';
import '../../styles/global.css';

const { token } = Astro.params;

let status: 'ok' | 'invalid' | 'already' = 'invalid';
let siteName = 'Blog';

try {
  const db = getDb(Astro.locals.runtime.env.DB);
  const config = await getSettings(Astro.locals.runtime.env.DB);
  siteName = config.site_name;

  if (token) {
    const sub = await db
      .select()
      .from(subscribers)
      .where(eq(subscribers.confirmationToken, token))
      .get();

    if (sub) {
      if (sub.confirmed === 1) {
        status = 'already';
      } else {
        await db.update(subscribers).set({
          confirmed: 1,
          confirmationToken: null,
        }).where(eq(subscribers.id, sub.id));
        status = 'ok';
      }
    }
  }
} catch {
  status = 'invalid';
}
